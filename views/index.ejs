<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Lập Lá Số Tử Vi</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {

      background-size: cover;
      background-repeat: no-repeat;
      background-attachment: fixed;
    }
    .form-container {
      background: rgba(255, 255, 255, 0.95);
      padding: 30px;
      border-radius: 10px;
      max-width: 700px;
      margin: 50px auto;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }
    .form-label {
      font-weight: 500;
    }
    .btn-primary {
      background-color: #8c7c3d;
      border: none;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="form-container">
      <h3 class="text-center mb-4">Lập Lá Số Tử Vi</h3>
      <form action="/submit" method="POST">

        <div class="mb-3">
          <label class="form-label">Họ Tên</label>
          <input type="text" name="user_id" class="form-control" placeholder="Nhập tên" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Ngày sinh</label>
          <div class="row">
            <div class="col">
              <select class="form-select" name="ngay_dl">
                <% for(let i=1;i<=31;i++){ %>
                  <option value="<%= i %>"><%= i %></option>
                <% } %>
              </select>
            </div>
            <div class="col">
              <select class="form-select" name="thang_dl">
                <% for(let i=1;i<=12;i++){ %>
                  <option value="<%= i %>">Tháng <%= i %></option>
                <% } %>
              </select>
            </div>
            <div class="col">
              <input type="number" name="nam_dl" class="form-control" placeholder="Năm">
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label">Lịch</label><br />
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="calendar_type" value="duong" checked>
            <label class="form-check-label">Lịch dương</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="calendar_type" value="am">
            <label class="form-check-label">Lịch âm</label>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label">Giờ sinh</label>
          <div class="row">
            <div class="col">
              <select class="form-select" name="gio_sinh">
                <% for(let i=0;i<=23;i++){ %>
                  <option value="<%= i %>"><%= i %> Giờ</option>
                <% } %>
              </select>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label">Giới tính</label><br />
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gioi_tinh" value="nam" checked>
            <label class="form-check-label">Nam</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gioi_tinh" value="nu">
            <label class="form-check-label">Nữ</label>
          </div>
        </div>

        <div class="mb-3 row">
          <div class="col">
            <label class="form-label">Năm xem</label>
            <input type="number" name="nam_xem" class="form-control" placeholder="VD: 2025">
          </div>
          <div class="col">
            <label class="form-label">Tháng xem (Âm lịch)</label>
            <select class="form-select" name="thang_xem">
              <% for(let i=1;i<=12;i++){ %>
                <option value="<%= i %>">Tháng <%= i %></option>
              <% } %>
            </select>
          </div>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-3">Lập lá số</button>
      </form>
    </div>
  </div>
</body>
</html>
